<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionActivity">

    <Button
        android:id="@+id/button_topleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/button_bottomleft"
        app:layout_constraintStart_toStartOf="@+id/button_bottomleft"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_topright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_topleft"
        app:layout_constraintEnd_toEndOf="@+id/button_bottomright"
        app:layout_constraintStart_toStartOf="@+id/button_bottomright" />

    <Button
        android:id="@+id/button_bottomleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:text="Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_bottomright"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_bottomright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_marginTop="71dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_topright" />
</android.support.constraint.ConstraintLayout>